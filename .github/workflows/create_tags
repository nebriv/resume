name: Create Tag

on:
  push:
    branches-ignore: # This will allow the workflow to trigger on pushes to all branches
      - none # This is a dummy value since GitHub Actions requires at least one item in the list

jobs:
  bump_version:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      
      - name: Bump version and push tag
        id: bump_version
        uses: hennejg/github-tag-action@v4.3.1
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          default_bump: patch
          tag_prefix: ""
          release_branches: ".*" # This regular expression matches any branch name

            
